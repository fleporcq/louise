.masonry
  column-gap 1.5em
  text-align center
  @media only screen and (min-width: screen-limit-large)
    column-count 2
  @media only screen and (min-width: screen-limit-xlarge)
    column-count 3
  .masonry__item
    display inline-block
    box-sizing border-box
    margin 0 0 1.5em 0

.photo
  position relative
  background: transparent url('../assets/spinner.gif') no-repeat scroll center center;
  img
    margin 0 auto
    display block
    max-width 100%
    height auto
    box-shadow 4px 4px 4px 0 #ccc
    animation fadeIn 0.5s
figure
  padding 0
  margin 0
  figcaption
    margin 10px 0 0 0
    color main-color
    @media screen and (min-width: screen-limit-large)
      display none

.photo__overlay
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  height 100%
  width 100%
  background-color rgba(0, 0, 0, 0.5)
  opacity 0

.photo__overlay:hover
  @media screen and (min-width: screen-limit-large)
    animation fadeIn 0.5s forwards

.photo__overlay__title
  color #fff
  font-size 1.5em
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

@keyframes fadeIn
  from {
    opacity 0
  }
  to {
    opacity 1
  }
